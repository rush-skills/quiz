<%= link_to packages_path do %><button class="btn btn-fab btn-raised btn-material-red"><i class="mdi-navigation-arrow-back"></i></button><%end%>
<div class="row">
<div class="well col-md-6 col-md-offset-3">
  <h1>
  <%= @package.name %>
  <%= link_to 'Delete', @package, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn pull-right btn-danger"%>
  <%= link_to 'Edit', edit_package_path(@package), :class => "btn btn-warning pull-right" %> 
  </h1> 
  <div class="img-qaa"><%= image_tag @package.image if @package.image %></div>

  <h2>Categories</h2>
  <ul>
  <% @package.categories.each do |c| %>
  	<li><%= link_to c.title, c %></li>
	<%end%>
	</ul>
</div>
</div>