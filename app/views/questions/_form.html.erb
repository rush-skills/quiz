<%= form_for([@test,@question]) do |f| %>
  <div class="inputs authform">
    <%= errors_for @question %>

    <div class="form-group">
      <%= f.text_field :title, class: 'form-control floating-label', placeholder: "Question title" %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, class: 'form-control floating-label', placeholder: "Description" %>
    </div>
    <div class="form-group">
      <label for="inputFile" class="col-lg-2 control-label">Image</label>
      <div class="col-lg-10">
          <input type="text" readonly="" class="form-control floating-label" placeholder="Browse...">
           <%= f.file_field :image, :id => "inputFile"%>
      </div>
    </div>
    <h3>Answers</h3>
    <div id="answers">
      <%= f.fields_for :answers do |answer| %>
        <%= render 'answers/answers_fields', :f => answer %>
      <%end%>
      <div class="links inline">
        <br><br>
        <%= link_to_add_association 'Add Answer', f, :answers,
    :partial => 'answers/answers_fields'%>
      </div>
     
    <div class="actions inline pull-right">
      <%= f.submit "Submit", :class => 'btn btn-success btn-lg'  %>
    </div>
  </div>
<% end %>
