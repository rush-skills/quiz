


<div class="row well well-lg">
  <div class="col-md-3">
    <p>
      <strong>Name:</strong>
      <%= @test.title %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @test.category.title %>
    </p>

    <p>
      <strong>User:</strong>
      <%= link_to @test.user.name, @test.user %>
    </p>


    <p>
      <strong>Free:</strong>
      <%= @test.free %>
    </p>
    <%= link_to 'Edit', edit_test_path(@test), :class => 'btn btn-success' %>
  </div>
  <div class="col-md-9">
    <h2>Questions</h2>
    <% @test.questions.each do |q| %>
      <%= render partial: "questions/view", :locals => {:question => q} %>
    <%end%>
    <%= link_to 'Add question', new_test_question_path(@test) %><br>
     |
    <%= link_to 'Back', tests_path %>
  </div>
</div>
